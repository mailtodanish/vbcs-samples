{
  "description": "Navigates to the flow selected in the left navigation bar.",
  "variables": {
    "item": {
      "required": true,
      "type": "string",
      "input": "fromCaller"
    },
    "updatedFrom": {
      "type": "string",
      "input": "fromCaller"
    }
  },
  "root": "ignoreExternalEvents",
  "actions": {
    "ignoreExternalEvents": {
      "module": "vb/action/builtin/ifAction",
      "parameters": {
        "condition": "{{ $variables.updatedFrom !== 'external' }}"
      },
      "outcomes": {
        "true": "callFunctionGetRecipe"
      }
    },
    "callNavigateChain": {
      "module": "vb/action/builtin/callChainAction",
      "parameters": {
        "id": "navigate",
        "params": {
          "selection": "{{ $chain.variables.item }}"
        }
      }
    },
    "callFunctionGetRecipe": {
      "module": "vb/action/builtin/callModuleFunctionAction",
      "parameters": {
        "module": "[[ $application.functions ]]",
        "functionName": "getRecipe",
        "params": [
          "{{ $variables.item }}"
        ]
      },
      "outcomes": {
        "success": "if"
      }
    },
    "if": {
      "module": "vb/action/builtin/ifAction",
      "parameters": {
        "condition": "[[ $chain.results.callFunctionGetRecipe !== undefined ]]"
      },
      "outcomes": {
        "true": "if3"
      }
    },
    "if3": {
      "module": "vb/action/builtin/ifAction",
      "parameters": {
        "condition": "[[ $application.responsive.lgUp ]]"
      },
      "outcomes": {
        "false": "assignVariablesOpenDrawer",
        "true": "callNavigateChain"
      }
    },
    "assignVariablesOpenDrawer": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$page.variables.openDrawer": {
          "source": "{{ !$page.variables.openDrawer }}"
        }
      },
      "outcomes": {
        "success": "callNavigateChain"
      }
    }
  }
}